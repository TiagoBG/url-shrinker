<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <title>URL Shrinker</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Nunito:ital@1&family=Rubik&display=swap");
      body {
        color: white;
        background-color: #40407a;
        /* font-family: 'Rubik', sans-serif; */
        font-family: "Nunito", sans-serif;
      }
      table {
        color: black;
        background-color: #f7f1e3;
      }
      button {
        background-color: #33d9b2;
      }
      a {
        color: #ff5252;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 mb-5">
      <h1 class="my-5"><b>URL Shrinker</b></h1>
      <form
        action="/shorUrls"
        method="POST"
        class="my-4 mb-5 form-inline d-flex"
      >
        <!-- <label for="fullUrl" class="sr-only">Url</label> -->
        <input
          required
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="url"
          class="form-control mr-2"
        />
        <button type="submit" class="btn btn-info"><b>Shrink</b></button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th><b>Full URL</b></th>
            <th><b>Short URL</b></th>
            <th><b>Clicks</b></th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
            </td>
            <td><a href="<%= shortUrl.short%>"><%= shortUrl.short%></a></td>
            <td><%= shortUrl.clicks%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <footer class="mt-5 text-center">
      <h4>Desarrollado por Santiago Betancur Graciano Â© 2021</h4>
    </footer>
  </body>
</html>
